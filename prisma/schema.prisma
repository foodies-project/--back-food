generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement()) // Унікальний ідентифікатор користувача
  name      String   // Ім'я користувача
  email     String   @unique // Унікальний email користувача
  password  String   // Пароль користувача
  createdAt DateTime @default(now()) // Дата створення запису
  updatedAt DateTime @updatedAt // Дата останнього оновлення запису
}
