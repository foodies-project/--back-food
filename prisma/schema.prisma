generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement()) // Унікальний ідентифікатор користувача
  name      String   // Ім'я користувача
  email     String   @unique // Унікальний email користувача
  password  String   // Пароль користувача
  createdAt DateTime @default(now()) // Дата створення запису
  updatedAt DateTime @updatedAt // Дата останнього оновлення запису
}

model Cuisine {
  id   Int    @id @default(autoincrement()) 
  name String @unique
  icon String 

  Restaurants Restaurant[]
}

model Restaurant {
  id            Int      @id @default(autoincrement()) 

  name          String   
  photo         String   
  cuisineId     Int
  isOpen        Boolean  @default(false)
  Cuisine       Cuisine  @relation(fields: [cuisineId], references: [id]) 
  rating        Float    @default(1.0)

  address       String @default("")
  distance      Float @default(0.0)

  deliveryPrice Float    
  minPrepTime   Int      
  maxPrepTime   Int      

  Dishes Dish[]
}

model Dish {
  id  Int   @id @default(autoincrement())

  name  String
  price Float @default(0.0)
  description String
  photo String  

  restaurantId Int
  Restaurant  Restaurant @relation(fields: [restaurantId], references: [id])
}

